<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="style.css" />
    <title>BlackJack Game</title>
    <style>
        /* Styles here */
        #sumEl, #firstCardEl, #secondCardEl, #thirdCardEl, #cardsEl, #notificationEl {
            color: black;
        }
        #messageEl {
            color: goldenrod;
        }
    </style>
</head>
<body>
    <h1 id="messageEl">Welcome to BlackJack game</h1>
    <p id="sumEl">Sum: </p>
    <p id="firstCardEl">First Card: </p>
    <p id="secondCardEl">Second Card: </p>
    <p id="thirdCardEl">Third Card: </p>
    <p id="cardsEl">Cards: </p>
    <p id="notificationEl">Notification: </p>
    <button onclick="startGame()" id="startGame">Start Game</button>

    <script>
        let firstCard = prompt("Please enter the first card: ");
        let secondCard = prompt("Please enter the second card: ");
        let cards = [firstCard, secondCard];
        let sum = parseInt(firstCard) + parseInt(secondCard);
        let hasBlackJack = false;
        let isAlive = false;
        let message = " ";
        let notification = " ";
        let messageEl = document.getElementById("messageEl");
        let sumEl = document.getElementById("sumEl");
        let cardsEl = document.getElementById("cardsEl");
        let notificationEl = document.getElementById("notificationEl");
        let firstCardEl = document.getElementById("firstCardEl");
        let secondCardEl = document.getElementById("secondCardEl");

        function startGame() {
            renderGame();
        }

        function renderGame() {
            cardsEl.textContent = "Cards: " + cards[0] + ", " + cards[1];
            firstCardEl.textContent = "First Card: " + cards[0];
            secondCardEl.textContent = "Second Card: " + cards[1];
            sumEl.textContent = "Sum: " + sum;

            if (sum <= 20) {
                notification = "Do you want to draw a new card?";
                newCard();
            } else if (sum === 21) {
                notification = "You've got BlackJack";
            } else {
                notification = "Sorry, you are out of the game";
            }
            messageEl.textContent = message;
            notificationEl.textContent = notification;
        }

        function newCard() {
            let min = 1;
            let max = 10;
            let thirdChoice = parseInt(Math.random() * (max - min + 1) + min);
            sum += thirdChoice;
            cards.push(thirdChoice);
            message = "Your final cards are " + cards.join(", ");
            renderGame();
        }
    </script>
</body>
</html>

