<body>
    <h1 id="messageEl">Welcome to BlackJack game</h1>
    <p id="sumEl">Sum: </p>
    <p id="firstCardEl">First Card: </p>
    <p id="secondCardEl">Second Card: </p>
    <p id="thirdCardEl">Third Card: </p>
    <p id="cardsEl">Cards: </p>
    <p id="notificationEl">Notification: </p>
    <button onclick="startGame()" id="startGame">Start Game</button>

    <script>
        let firstCard = prompt("Please enter the first card: ")
        let secondCard = prompt("Please enter the second card: ")
        let cards = [firstCard, secondCard]
        let sum = parseInt(firstCard) + parseInt(secondCard)
        let hasBlackJack = false
        let isAlive = false
        let message = " "
        let notification = " "
        let messageEl = document.getElementById("messageEl"); // Fixed the typo here
        let sumEl = document.getElementById("sumEl"); // Fixed the typo here
        let cardsEl = document.getElementById("cardsEl"); // Fixed the typo here
        let notificationEl = document.getElementById("notificationEl");
        let firstCardEl = document.getElementById("firstCardEl");
        let secondCardEl = document.getElementById("secondCardEl");
        function startGame() {
            renderGame();
        }

        function renderGame() {
            cardsEl.textContent = "Cards : " + cards[0] + " " + cards[1];
            sumEl.textContent = "Sum : " + sum; // Fixed the sum display
            for (let count = 0; count < cards.length; count++) { // Fixed the loop condition

            }
            if (sum <= 20) {
                notification = "Do you want to draw a new card?: ";
                newCard();
            } else if (sum === 21) {
                notification = "You've got BlackJack ";
            } else {
                notification = "Sorry, you are out of the game";
            }
            messageEl.textContent = message; // Updated the messageEl content
            notificalEl.textContent = notification
        }

        function newCard() {
            let min = 1; // Fixed the variable names
            let max = 10; // Fixed the variable names
            let thirdChoice = parseInt(Math.random() * (max - min + 1) + min); // Fixed the random number generation
            sum += thirdChoice;
            cards.push(thirdChoice); // Added the new card to the cards array
            notification = "Your final cards are " + cards.join(" "); // Fixed the message content
        }
    </script>
